!!!
%html{lang: "ja"}
%head
%meta(charset="UTF-8")
%link(href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet")
%body
  .flash-box
  %div.wrapper
    .chat-side
      .side-header
        .side-header__user-name
          kobaba
        .user-menu
          .user-menu__edit-user
            = link_to "#" do
              %i.fas.fa-edit
          .user-menu__new-group
            = link_to "#" do
              %i.fas.fa-cog
      .groups
        = render partial:  "user"
    .chat-main
      .main-header
        .current-group
          .current-group__name
            test
          .member-list
            Member:
        .main-header__edit-btn
          .main-header__edit-btn__text
            Edit
     
      .messages
        .message
          = render partial: "message"
        .message
          = render partial: "message"
      .form
        .new-message
          .input-box
            .input-box__text
              %input{placeholder: "type a message"} 
            .image-label
              %form{action: "#", method: "post", enctype: "multipart/form-data"}
                %label
                  %i.far.fa-image
                  %input{class: "test",type: "file", name: "upfile", value: ".upload-label"}
          .new-message__submit-btn
            .new-message__submit-btn__text
              Send
