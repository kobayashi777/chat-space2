.message
  .upper-info
    .upper-info__user
      = message.user.name
    .upper-info__data
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .massage__text
    - if message.content.present?
      = message.content
  - if message.image.present?
    = link_to image_tag(message.image,class: "message__to")
